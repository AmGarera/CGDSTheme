{% block nav %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {#<a class="navbar-brand" href="{{ site.url }}">{{ site.name }}</a>#}
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Home-07.png"
                                    alt="Home">Home</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/our-story"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/OurStory-07.png"
                                    alt="Our Story">Our Story</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/news"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Articles-07.png"
                                    alt="Articles">News</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/episodes"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Episodes-07.png"
                                    alt="Episodes">Episodes</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/events"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Events-07.png"
                                    alt="Events">Events</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/sponsors"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Sponsors-07.png"
                                    alt="Sponsors">Sponsors</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="/services-2"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Services.png"
                                    alt="Services">Services</a></li>
                    <li class="text-uppercase dropdown"><a class="hover-color" href="#myModal" role="button"
                                                           data-toggle="modal"><img
                                    src="http://theclemsongamedayshow.com/wp-content/uploads/2017/09/Contact-07.png"
                                    alt="Contact">Contact</a></li>
                </ul>
                {#Old Loop {% for item in menu.get_items %}
                        {% if item.get_children %}
                            <i></i><li class=" dropdown {{item.classes | join(' ')}} {% if item.current or item.current_item_ancestor or item.current_item_parent %}active{%endif%}">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="{{item.get_link}}">{{item.title}}<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu">
                                    {% for child in item.get_children %}
                                        <li {% if child.current %}class="active"{%endif%}>
                                            <a href="{{child.get_link}}">{{child.title}}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                            <li class="{{item.classes | join(' ')}} {% if item.current or item.current_item_ancestor or item.current_item_parent %}active{%endif%}">
                                <a href="{{item.get_link}}">{{item.title}}</a>
                            {% endif %}
                        </li>
                    {% endfor %}#}
            </div><!--/.nav-collapse -->
            {#Contact Modal#}
            <!-- Modal -->
            <div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                 data-backdrop="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Get In Touch</h4>
                        </div>
                        <div class="modal-body">
                            {#Where the Form Goes#}

                            <form class="form-inline" action="https://formspree.io/your@email.com"
                                  method="POST">
                                <div class="form-group">
                                    {#<label for="exampleInputName2">Email</label>#}
                                    <input type="email" name="_replyto" class="form-control" id="exampleInputName2"
                                           placeholder="Your Email">
                                    <button type="submit" value="Send" class="btn btn-primary"> ></button>
                                </div>

                            </form>
                            {#End of form#}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><span
                                        style="color: #000;">Close</span></button>
                            {#<button type="button" class="btn btn-primary">Save changes</button>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            jQuery(document).ready(function ($) {
                $('.navbar .dropdown').hover(function () {
                    $(this).find('.dropdown-menu').first().stop(true, true).slideDown(150);
                }, function () {
                    $(this).find('.dropdown-menu').first().stop(true, true).slideUp(105);
                });

                $('#myModal').on('shown.bs.modal', function () {
                    $('#myInput').focus()
                })
            });
        </script>
    </nav>
{% endblock nav %}
